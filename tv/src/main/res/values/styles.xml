<resources>
    <style name="LeanbackPreferences" parent="Theme.Leanback">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Leanback</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <!--<item name="android:colorPrimary">@color/pref_background</item>-->
    </style>

    <style name="MyOnboardingTheme" parent="Theme.Leanback.Onboarding">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Widget.HyperionGrabber.GuidedActionItemDescriptionStyle" parent="Widget.Leanback.GuidedActionItemDescriptionStyle">
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="Widget.HyperionGrabber.GuidanceIconStyle" parent="Widget.Leanback.GuidanceIconStyle">
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="Widget.HyperionGrabber.FirstStepGuidanceIconStyle" parent="Widget.HyperionGrabber.GuidanceIconStyle">
        <item name="android:background">#fff</item>
    </style>

    <style name="Theme.HyperionGrabber.GuidedStep" parent="Theme.Leanback.GuidedStep">
        <item name="guidedStepBackground">@color/colorPrimaryDark</item>
        <item name="guidedActionsBackground">@color/colorPrimaryExtraDark</item>
        <item name="guidedActionsBackgroundDark">@color/colorPrimarySuperDark</item>
        <item name="guidanceIconStyle">@style/Widget.HyperionGrabber.GuidanceIconStyle</item>
    </style>

    <style name="Theme.HyperionGrabber.GuidedStep.First" parent="@style/Theme.HyperionGrabber.GuidedStep">
        <item name="guidanceIconStyle">@style/Widget.HyperionGrabber.FirstStepGuidanceIconStyle</item>
    </style>

    <style name="AboutTitles">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">36sp</item>
        <item name="android:fontFamily"> </item>
    </style>

    <style name="AboutTitles.ResourceItem">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="AboutTitles.ResourceTitle" parent="AboutTitles.ResourceItem">
        <item name="android:textSize">32dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="AboutTitles.ResourceLink" parent="AboutTitles.ResourceItem">
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="AboutTitles.ResourceLabel" parent="AboutTitles.ResourceItem">
        <item name="android:textSize">24dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">gravity</item>
    </style>

    <style name="AboutTitles.Version" parent="AboutTitles.ResourceItem">
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textAlignment">center</item>
    </style>
</resources>
